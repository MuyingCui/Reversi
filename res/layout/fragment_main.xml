<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wood"
    tools:context="edu.umkc.mcz5d.reversi.MainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/button_one"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_two"
        android:layout_alignRight="@+id/button_how"
        android:layout_marginTop="60dp"
        android:text="One Player" />

    <Button
        android:id="@+id/button_two"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_how"
        android:layout_alignRight="@+id/button_how"
        android:layout_below="@+id/button_one"
        android:layout_marginTop="22dp"
        android:text="Two Players" />

    <Button
        android:id="@+id/button_menu"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_how"
        android:layout_alignRight="@+id/button_two"
        android:layout_below="@+id/button_two"
        android:layout_marginTop="22dp"
        android:text="Menu" />

    <Button
        android:id="@+id/button_how"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="How to Play?" />

</RelativeLayout>